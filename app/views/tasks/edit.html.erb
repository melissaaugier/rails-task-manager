<h1>Edit</h1>

  <%= form_for @task, method: :patch do |f| %>
    <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, { class: "form-control" } %>
    <%= f.label :details, "Description" %>
    <%= f.text_field :details, { class: "form-control" } %>
    </div>
    <div class="form-check">
      <%= f.check_box :completed, { class: "form-check-input" } %>
      <%= f.label :completed, "Completed", { class: "form-check-label" } %>
    </div>
    <div class="d-flex">
      <%= f.submit "Edit task", { class: "btn btn-primary mt-3 mr-2" } %>
      <%= link_to 'Back to list', root_path, { class: "btn btn-danger mt-3" } %>
    <div>
  <% end %>



